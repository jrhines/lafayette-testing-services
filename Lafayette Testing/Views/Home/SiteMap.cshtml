@{
    ViewBag.Title = "Site Map";
	ViewBag.Description = "";
	ViewBag.BodyClass = "site-map";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section row">
	<div id="primary">
		<nav class="breadcrumb col lg-12" itemtype="http://data-vocabulary.org/Breadcrumb" itemscope="">
