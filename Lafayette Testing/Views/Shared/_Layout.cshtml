    <head>
        @* Meta Data *@
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="viewport" content="width=1200, initial-scale=1" />
        @* <meta name="viewport" content="initial-scale=1, width=device-width, user-scalable=no" /> *@
		
        <title>@ViewBag.Title | Lafayette Testing Services</title>
        <meta name="description" content="@ViewBag.Description" />
        <meta name="author" content="Lafayette Testing Services" />
        <meta name="copyright" content="Copyright @DateTime.Now.Year Lafayette Testing Services. All Rights Reserved." />
        <meta name="verify-v1" content="EhWLMuLf5BSsbU5JQVghjEW4HRQhDSB6jIq8kDehDy8=" />
        
        @* Bookmark Icons *@
        <link rel="shortcut icon" href="~/favicon.ico" />
        <link rel="apple-touch-icon" href="~/apple-touch-icon.png" />

        @* Facebook Open Graph *@
		<meta property="og:title" content="" />
		<meta property="og:description" content="" />
		<meta property="og:image" content="" />
		<meta property="og:url" content="" />
		<meta property="og:site_name" content="" />
		<meta property="og:type" content="website" />

	    @* Twitter Card *@
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content="" />
		<meta name="twitter:description" content="" />
		<meta name="twitter:image" content="" />
		<meta name="twitter:domain" content="" />
        
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet" />
		
		@* Global CSS *@
        @Styles.Render("~/Content/css/site.css")
		@Styles.Render("~/Content/css/template.css")

        @* Local CSS *@
        @Styles.Render("~/Content/css/easy-responsive-tabs.css")
		@Styles.Render("~/Scripts/plugins/jquery.fancybox-2.1.5/jquery.fancybox.css")
        
        @* Preloaded JS *@
        @Scripts.Render("~/Scripts/libs/modernizr/modernizr-2.7.1.min.js")
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script>
            window.jQuery || document.write('<script src="/Scripts/libs/jquery/jquery-1.11.0.min.js"><\/script>');
            
            /* Universal Analytics */
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
				m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-XXXXXX-X', 'auto');
            ga('send', 'pageview');
        </script>
    </head>
    <body class="@ViewBag.BodyClass">
        <div id="container">
			<header id="site-header" role="banner">
				<div class="row">
					<div class="col">
						<h1 id="site-title"><a href="/"><img src="~/Content/images/lafayette-testing-services-logo.gif" alt="Lafayette Testing Services" /><span>Lafayette Testing Services</span></a></h1>
						<h2 class="print">1-800-337-4884</h2>
					</div>
				</div>

				<nav id="site-nav" class="collapsed row" role="navigation">
					<h2 class="assistive-text">Main navigation</h2>
					<a href="#content" class="skip-link assistive-text">Skip to content</a>
					@RenderSection("featured", required: false) 
					<ul class="nav group">
						<li class="nav-item" id="nav-item-home">@Html.ActionLink("Home", "Index", "Home")</li>
						<li class="nav-item" id="nav-item-nts">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Nondestructive Testing Services<span class="arrow arrow-down"></span></a>
							<ul class="dropdown-menu">
								<li>@Html.ActionLink("Ultrasonics Testing", "ultrasonics-testing", "services")</li>
								<li>@Html.ActionLink("Liquid Penetrant Testing", "liquid-penetrant-testing", "services")</li>
								<li>@Html.ActionLink("Magnetic Particle Testing", "magnetic-particle-testing", "services")</li>
                                <li>@Html.ActionLink("High Energy X-Ray Testing", "high-energy-x-ray-testing", "services")</li>
                                <li>@Html.ActionLink("Digital Radiography Testing", "digital-radiography-testing", "services")</li>
								<li>@Html.ActionLink("Radiography Testing", "radiography-testing", "services")</li>
							</ul>
						</li>
                        <li class="nav-item" id="nav-item-cnc">@Html.ActionLink("CNC Precision Machining", "cnc-precision-machining", "services")</li>
						<li class="nav-item" id="nav-item-value-added-services">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Value Added Services<span class="arrow arrow-down"></span></a>
							<ul class="dropdown-menu">
								<li>@Html.ActionLink("Welding", "value-added-services", "services")</li>
								<li>@Html.ActionLink("Mechanical Polishing", "value-added-services", "services")</li>
								<li>@Html.ActionLink("Parts Washing", "value-added-services", "services")</li>
                                <li>@Html.ActionLink("Sandblasting", "value-added-services", "services")</li>
							</ul>
						</li>
					</ul>
				</nav>

				<div class="utility">
					<nav>
						<ul class="inline-nav">
							<li>@Html.ActionLink("Contact Us", "contact", "Home")</li>
							<li>@Html.ActionLink("About Us", "about", "Home")</li>
						</ul>
					</nav>
				</div>
            </header>
            <main id="content" role="main">
				@RenderBody()
            </main>
            <footer id="site-footer" role="contentinfo">
				<div class="row">
					<div class="col sm-4 last">
						<nav class="utility">
							<ul class="inline-nav">
								<li>@Html.ActionLink("Usage Agreement", "usage-agreement", "Home")</li>
								<li>@Html.ActionLink("Privacy Statement", "privacy-statement", "Home")</li>
								<li>@Html.ActionLink("Site Map", "site-map", "Home")</li>
							</ul>
						</nav>
					</div>
					<div class="col sm-8" itemscope itemtype="http://schema.org/LocalBusiness">
			            <img src="~/Content/images/usa-flag.gif" id="footerFlag" alt="Made in USA" title="Made in USA" /> &#169; @DateTime.Now.Year  <span itemprop="name">Lafayette Testing Services</span>. All rights reserved.
                        <span itemprop="address" itemscope itemtype="http://schema.org/PostalAddress"><br />
                            <span itemprop="streetAddress">3710 North Richards Street</span> <span itemprop="addressLocality">Milwaukee</span>, <span itemprop="addressRegion">WI</span> <span itemprop="postalCode">53212</span><br />
							Main: <span class="tel" itemprop="telephone">1-800-337-4884</span> <span class="pipe">&#8729;</span> Fax: <span itemprop="faxNumber">414-332-3652</span>
                        </span>
					</div>
				</div>
            </footer>
        </div>
        @Scripts.Render("~/Scripts/plugins/jquery.easyResponsiveTabs/jquery.easyResponsiveTabs.min.js")
		@Scripts.Render("~/Scripts/plugins/jquery.fancybox-2.1.5/jquery.fancybox.pack.js")
		<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.min.js"></script>
		<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/additional-methods.min.js"></script>
		<script src="//ajax.aspnetcdn.com/ajax/mvc/5.1/jquery.validate.unobtrusive.min.js"></script>
		@RenderSection("scripts", required: false)
		@Scripts.Render("~/Scripts/site.js")
    </body>
</html>